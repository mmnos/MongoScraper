<div>
  {{#each articles}}
  <div class="row" data-id={{this._id}}>
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{this.title}}</span>
          {{!-- <p>hello</p> --}}
        </div>
        <div class="card-action">
          <a href="https://espn.com/{{this.link}}" target="_blank" class="btn">View</a>
          <button onclick="deleteArticle('{{this._id}}')" class="btn">Delete</button>
          <a href="#comment" class="btn modal-trigger">Add Comment</a>
        </div>
      </div>
    </div>
  </div>


  <!-- Modal Structure -->
  <div id="comment" class="modal">
    <div class="modal-content">
      <h4>Add Comment</h4>
      {{#each this.comment}}
      <div>{{this.title}}</div>
      {{/each}}
      <input type="text" id="addcomment"/>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
      <button onclick="saveComment('{{this._id}}')" class="modal-close waves-effect waves-green btn-flat">Save</button>
    </div>
  </div>  

  {{/each}}
</div>


